@model StudentFollow.ViewModel.CreateDataViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Create</h2>

<div>

    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Resminiz :</label>
            @*<input type="file" class="form-control" placeholder="Soyadınzı Giriniz" id="file" name="file">*@
            @Html.TextBox("file","",new {type="file", @class = "form-control", @required = "required" })
        </div>

        <div class="mb-3 mt-3">
            <label for="email" class="form-label">T.C. Kimlik No :</label>
            @Html.TextBoxFor(m => m.CreateStudentViewModel.Id, new { @class = "form-control", @required = "required", @placeholder = "T.C Kimlik No" })
        </div>
        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Adınız :</label>
            @Html.TextBoxFor(m => m.CreateStudentViewModel.Name, new { @class = "form-control", @required = "required", @placeholder = "Adınızı Giriniz" })
        </div>

        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Soyadınız :</label>
            @Html.TextBoxFor(m => m.CreateStudentViewModel.Surname, new { @class = "form-control", @required = "required", @placeholder = "Soyadınız Giriniz" })
        </div>
        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Cinsiyetiniz :</label>
            @Html.DropDownListFor(m => m.CreateStudentViewModel.Gender, new List<SelectListItem>
                  { new SelectListItem{Text="Kadın", Value="False"},
                    new SelectListItem{Text="Erkek", Value="True"}}, new { @class = "form-control" })
        </div>

        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Sınıfınız :</label>
            @Html.DropDownListFor(model => model.CreateStudentViewModel.ClassroomId, new SelectList(Model.ClassroomViewModel, "Id", "Name"), new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    }

</div>

