@model StudentFollow.ViewModel.EditDataViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Edit</h2>
<div>

    @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

    <div class="mb-3 mt-3">
        <label for="email" class="form-label">Resminiz :</label>
        <img src="~/Image/@Model.EditStudentViewModel.ImagePath" class="rounded" alt="@Model.EditStudentViewModel.ImagePath" style="display:block; width:100px; height:100px;margin-bottom:10px" />
        @*<input type="file" class="form-control" placeholder="Soyadınzı Giriniz" id="file" name="file">*@
        @Html.TextBox("file", "", new { type = "file", @class = "form-control" })
    </div>

    <div class="mb-3 mt-3">
        <label for="email" class="form-label">T.C. Kimlik No :</label>
        @Html.HiddenFor(m => m.EditStudentViewModel.Id)
        <label class="form-control">@Model.EditStudentViewModel.Id</label>

        @*@Html.TextBoxFor(m => m.EditStudentViewModel.Id, new { @class = "form-control", @required = "required", @placeholder = "T.C Kimlik No" })*@
    </div>
        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Adınız :</label>
            @Html.TextBoxFor(m => m.EditStudentViewModel.Name, new { @class = "form-control", @required = "required", @placeholder = "Adınızı Giriniz" })
        </div>

        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Soyadınız :</label>
            @Html.TextBoxFor(m => m.EditStudentViewModel.Surname, new { @class = "form-control", @required = "required", @placeholder = "Soyadınız Giriniz" })
        </div>
        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Cinsiyetiniz :</label>
            @Html.DropDownListFor(m => m.EditStudentViewModel.Gender, new List<SelectListItem>
                  { new SelectListItem{Text="Kadın", Value="False"},
                    new SelectListItem{Text="Erkek", Value="True"}}, new { @class = "form-control" })
        </div>

        <div class="mb-3 mt-3">
            <label for="email" class="form-label">Sınıfınız :</label>
            @Html.DropDownListFor(model => model.EditStudentViewModel.ClassroomId, new SelectList(Model.ClassroomViewModel, "Id", "Name"), new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
    }

</div>



